@model Student;
@{
    ViewData["Titie"] = "บันทึกข้อมูล";
}
<h1 class="text-center">บัททึกคะแนนสอบนักเรียน</h1>
<form method="post" asp-controller="Students" asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Score"></label>
        <input type="number" asp-for="Score" class="form-control" />
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary my-2">บักทึก</button>
</form>